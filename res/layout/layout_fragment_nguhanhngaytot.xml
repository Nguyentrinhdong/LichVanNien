<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:alpha="0.8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày sinh dương lịch"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/day_sinh"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            />

        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/month_sinh"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>

        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/year_sinh"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn ngày xem dương lịch"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:padding="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/day_xem"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            />

        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/month_xem"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>

        <com.bhmedia.lichvannien2016.ui.wheel.WheelView
            android:id="@+id/year_xem"
            android:layout_height="150dip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="5dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xemketqua_button"
        android:layout_gravity="center" />
</LinearLayout>