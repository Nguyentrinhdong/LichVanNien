<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_baotrum"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ln_khung_thu"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="17"
            android:textColor="@color/black"
            android:textSize="@dimen/ngay_lichngay" />

        <TextView
            android:id="@+id/tv_thang_nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ngay"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Tháng 3 Năm 2015"
            android:textColor="@color/black"
            android:textSize="@dimen/thang_nam_lichngay" />

        <LinearLayout
            android:id="@+id/ll_hacHoangDao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_thang_nam"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_icon_hoangHacDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_thang_nam"
                android:layout_centerInParent="true"
                android:src="@drawable/hoangdao_icon" />

            <TextView
                android:id="@+id/tv_hoangHacDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_thang_nam"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:text="Hoàng đạo"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tenTacGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_danhngon"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_tacgia"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_danhngon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_baotrum"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_danhngon"
        android:src="@drawable/ln_row_khi" />

</RelativeLayout>