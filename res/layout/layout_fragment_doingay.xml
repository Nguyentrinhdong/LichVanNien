<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp" >

            <TextView
                android:id="@+id/tv_ngayduong_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_thangduong_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_namduong_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/day"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/month"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/year"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_duongLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Dương lịch"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <ImageView
                android:id="@+id/iv_doiNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/doingay_btn_change2" />

            <TextView
                android:id="@+id/tv_amLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Âm lịch"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/tv_ngayam_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_thangam_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/tv_namam_doingay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
              android:id="@+id/llcanchi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.2dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Ngày"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_ngayAmLich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="17"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_am" />

                <TextView
                    android:id="@+id/tv_ngayAmLichCanChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bính Thìn"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.2dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tháng"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_thangAmLich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="01"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_am" />

                <TextView
                    android:id="@+id/tv_thangAmLichCanChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bính Dần"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:alpha="0.8"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Năm"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/tv_namAmLich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:text="2015"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_am" />

                <TextView
                    android:id="@+id/tv_namAmLichCanChi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ất Mùi"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/ll_chitietngay_doingay"
                android:layout_width="155dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/chitietngay_bt"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/ll_themsukien_doingay"
                android:layout_width="155dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/themsukien_bt"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="@dimen/text_size_large" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>