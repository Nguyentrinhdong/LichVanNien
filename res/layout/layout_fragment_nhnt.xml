<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Chọn ngày sinh dương lịch"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/day_batdau"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/month_batdau"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/year_batdau"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="Chọn ngày xem dương lịch"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal" >

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/day_ketthuc"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/month_ketthuc"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />

            <com.bhmedia.lichvannien2016.ui.wheel.WheelView
                android:id="@+id/year_ketthuc"
                android:layout_width="0dp"
                android:layout_height="150dip"
                android:layout_weight="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_ketqua_saogiaihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/xemketqua_button2" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>